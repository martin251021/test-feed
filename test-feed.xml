    <ITEM_ID>12345</ITEM_ID> <!-- Unique identifier for the product -->
    <PRODUCTNAME>Product Name</PRODUCTNAME> <!-- Product's name -->
    <PRODUCT>Category / Product Type</PRODUCT> <!-- Full product category or type -->
    <DESCRIPTION>Product description...</DESCRIPTION> <!-- Detailed product description -->
    <URL>https://www.example.com/product-url</URL> <!-- Link to the product on your website -->
    <IMGURL>https://www.example.com/image-url.jpg</IMGURL> <!-- URL of the main product image -->
